:

set -eaux

echo "======> $1"

t=$(basename $1)

mir_tool="@MIR_TOOL@"
mir_compare="@MIR_COMPARE@"
grib_get="@GRIB_GET@"
grib_compare="@GRIB_COMPARE@"
mars_script="@MARS_SCRIPT@"

tests_assertions_dir="@CMAKE_CURRENT_SOURCE_DIR@"

state=mars
while read n
do
    if [[ "$n" = "" ]]
    then
        continue
    fi
    echo $n
    case $n in
        \#*)
            ;;

        *)
        case $state in

            mars)
            if [ -f "${tests_assertions_dir}/$n" ]
            then
                ln -sf "${tests_assertions_dir}/$n" data.in.$t
            else
                echo "retrieve,$n,target=data.in.$t" > mars.r.$t
                $mars_script mars.r.$t
            fi
            state=mir
            ;;

            mir)
            $mir_tool $n data.in.$t data.out.$t
            state=gribapi
            ;;

            gribapi)
            set $(echo $n | tr '=' ' ')
            g=$($grib_get -p $1 data.out.$t)
            if [[ $g -ne $2 ]]
            then
                echo "$1: expected [$2], got [$g]" 1>&2
                exit 1
            fi
            ;;

        esac
        ;;


    esac
done < $1
