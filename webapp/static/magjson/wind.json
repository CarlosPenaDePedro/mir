{
    "drivers": [
        {
            "format": "png", 
            "fullname": "${path=map.png}", 
            "output_cairo_transparent_background": "off", 
            "output_name_first_page_number": "off", 
	    "output_width": "${width=800}"
        }
    ], 
    "height": "${height=400}",
    "width": "${width=800}",
    "method": "wrep",
    "version": "3.0", 
    "page": {
        "map": {
            "border": "off", 
            "lower_left_latitude": "-90", 
            "lower_left_longitude": "-180", 
	    "projection": "${proj=cylindrical}",
            "upper_right_latitude": "90", 
            "upper_right_longitude": "180", 
            "plot": {
                "wind": {
					"wind_field_type" : "arrows",
					"wind_thinning_factor" : "25",
					"wind_arrow_colour" : "navy"
                }, 
                "grib": {
                     "grib_scaling_factor": "${scale=1}",		     
                    "automatic_scaling": "off",
		    "input_file_name": "${data=data.grib}"
                }
            }, 
			"coastlines":{}
        }, 
        "page_id": "off"
    } 
}
